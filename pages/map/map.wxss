/* pages/map/map.wxss */

.line{
  width: 50%;
  margin: auto;
  border: 5rpx solid lightgrey;
  border-radius: 50%;
  
}

input {
  background: linear-gradient(to right top, 
  rgba(226, 222, 222, 0.8),
  rgba(255,255,255,0.3)
  );
  padding: 0 1rem;
  margin: 1rem;
  border-radius: 6px;
}

.search{
  display: inline-block;
}

.searchicon {
  position: fixed;
  top: 10prx;
  right: 20rpx;
}

.AI{
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  margin: 1rem 0rem;
}
.AI image{
  width: 80rpx;
  height: 80rpx;
}

.AItext {
  display: flex;
  align-items: center;
  justify-items: center;
  justify-content: space-evenly;
  margin: 1rem 0rem;
}
.myText {
  text-align: center;
  flex: 1;
}
.divideline {
  width: 100%;
  border: 1rpx solid lightgrey;
}

.toolicon {
  width: 40rpx;
  height: 40rpx;
  margin: 0 1rem;
}
.icon2{
  align-items: center;
}

.tools{
  border-radius: 10px;
  flex-wrap: nowrap;
  align-items: center;
  width: 100%;
  height: 40px;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  justify-items: center;
  box-sizing: border-box;
  position: relative;
  top: 1rpx;
}